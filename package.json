{
  "name": "homepage",
  "private": true,
  "scripts": {
    "dev": "npm-run-all build:config dev:next",
    "build": "npm-run-all build:config build:next",
    "start": "npm-run-all build:config start:next",
    "dev:next": "next",
    "build:config": "babel src/build --extensions .ts -d config",
    "build:next": "next build",
    "start:next": "next start",
    "test": "eslint pages/*.jsx src/**/*.js",
    "favicon": "real-favicon generate faviconDescription.json faviconData.json static"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.5.8",
    "@mdx-js/react": "^1.5.8",
    "@next/mdx": "^9.3.3",
    "@svgr/core": "^5.3.0",
    "@zeit/next-css": "^1.0.1",
    "babel-eslint": "10.1.0",
    "change-case": "^4.1.1",
    "eslint": "6.8.0",
    "lodash": "^4.17.15",
    "next": "^9.3.3",
    "next-compose-plugins": "^2.2.0",
    "next-images": "^1.4.0",
    "next-seo": "^4.4.0",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "read-pkg-up": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.8",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-fp": "2.3.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "6.10.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:prettier/recommended",
      "plugin:you-dont-need-lodash-underscore/compatible",
      "plugin:jsx-a11y/strict",
      "prettier/react",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "fp",
      "import",
      "jsx-a11y",
      "jsx-a11y",
      "prettier",
      "prettier",
      "react-hooks",
      "react",
      "react",
      "you-dont-need-lodash-underscore"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "import/prefer-default-export": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-props-no-spreading": "off",
      "react/jsx-closing-tag-location": "off",
      "fp/no-class": "off",
      "no-console": "off"
    }
  },
  "prettier": {
    "printWidth": 80,
    "proseWrap": "always",
    "arrowParens": "always",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,json,html,css,scss}": [
      "prettier --write"
    ],
    "**/*.{js,jsx}": [
      "eslint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
